# Copy this to .env and fill in your values
# On Railway, set these as environment variables in the dashboard

# LLM
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.3-70b-versatile

# Threat Intel
ABUSEIPDB_API_KEY=your_abuseipdb_key
VIRUSTOTAL_API_KEY=your_virustotal_key

# Slack
SLACK_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
DASHBOARD_URL=https://your-frontend.vercel.app

# Email
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your@gmail.com
EMAIL_SMTP_PASS=your_app_password
EMAIL_TO=alerts@yourcompany.com

# Auth
GUARDIAN_AUTH_ENABLED=true
GUARDIAN_ADMIN_USER=admin
GUARDIAN_ADMIN_PASS=change_this_strong_password
GUARDIAN_JWT_SECRET=change_this_to_long_random_string

# Scheduler
SCHEDULER_ENABLED=false
SCHEDULER_INTERVAL_MINUTES=60
SCHEDULER_LOG_DIR=./scheduled_logs

# Guardian
GUARDIAN_AUTO_APPROVE=false
GUARDIAN_MODE=web
GUARDIAN_API_URL=https://your-backend.railway.app
FRONTEND_URL=https://your-frontend.vercel.app
